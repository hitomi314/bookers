<h1 class="heading">Books</h1>
  <table>
    <thead>
      <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <today>
      <tr>
        <% @books.each do |book| %>
        <td class="book-title"><%= book.title %></td>
        <td class="book-body"><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book),method: :delete %></td>
        </tr>
      <% end %>
      </tr>
    </today>
    </table>

<%= form_with model:Book, local:true do |f| %>
<form class="new_book">
    <h2>New book</h2>
    <div class="field">
      <label for="book_title">Title</label>
     <%= f.text_field :title %>
    </div>
    <div class="field"></div>
     <label for="book_body">Body</label>
      <%= f.text_area :body %>
     <div class="actions">
     <%= f.submit 'Create Book' %>
     </div>
  </form>
<% end %>

