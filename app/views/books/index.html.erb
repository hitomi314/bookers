<header>
  <h1 class="heading">
   Books
  </h1>
</header>
<main>
  <div class="main">
  <% @book.each do |book| %>
        <div class="blog-item">
          <div class="blog-image"><%= image_tag('img/forest.jpg',  class: 'blog-image') %></div>
          <section class="blog-text">
            <h3 class="blog-text-heading"><%= link_to blog.title, blog_path(blog) %></h3>
            <p class="blog-date"><%= blog.created_at %></p>
            <span class="category"><%= blog.category %></span>
          </section>
        </div>
      <% end %>
  </div>
  <div class="new">
    <h1>新規投稿</h1>
    <%= form_with model: @book, local:true do |f| %>
     <h4>本名</h4>
    <%= f.text_field :title %>
     <h4>感想</h4>
     <%= f.text_area :body %>
     <%= f.submit '投稿' %>
    <% end %>
  </div>
</main>

<!-- footer -->
<footer><p class="footer-text">© All rights reserved by Infratop.Inc.</p></footer>
