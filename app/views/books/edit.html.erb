<%= form_with model:@book, local: true do |f| %>
<h1>Editing Book</h1>
<form class="edit_book">
 <div class="field">
   <label for="book_title">Title</label>
   <%= f.text_field :title %>
 </div>
 <div class="field">
   <label for="book_body">Body</label>
   <%= f.text_area :body %>
 </div>
 <div class="actions">  <%= f.submit 'Update Book' %></div>
</form>
 <% end %>

<a class="show"><%= link_to 'Show', book_path(@book) %></a>
|
<a class=back><%= link_to 'Back', "/books" %> </a>